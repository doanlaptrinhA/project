<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#38b6FF">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/next"
            android:padding="10dp"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/Img"
            android:layout_width="200dp"
            android:layout_height="286dp"
            android:layout_gravity="center"
            android:src="@drawable/rank" />
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent">

           <ImageView
               android:id="@+id/Medal1"
               android:layout_width="50dp"
               android:layout_height="86dp"
               android:layout_gravity="center"
               android:src= "@drawable/medalone"/>

           <ImageView
               android:id="@+id/Text1"
               android:layout_marginTop="15dp"
               android:layout_width="300dp"
               android:layout_height="90dp"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@id/Medal1"
               android:src= "@drawable/Kho10"
               />

           <ImageView
               android:id="@+id/Medal2"
               android:layout_width="50dp"
               android:layout_height="86dp"
               android:layout_gravity="center"
               android:layout_below="@+id/Medal1"
               android:src= "@drawable/medaltwo"/>

           <ImageView
               android:id="@+id/Text2"
               android:layout_marginTop="15dp"
               android:layout_below="@+id/Medal1"
               android:layout_width="300dp"
               android:layout_height="90dp"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@id/Medal2"
               android:src= "@drawable/Kho7"
               />

           <ImageView
               android:id="@+id/Medal3"
               android:layout_width="50dp"
               android:layout_height="86dp"
               android:layout_gravity="center"
               android:layout_below="@+id/Medal2"
               android:src= "@drawable/medalthree"/>


           <ImageView
               android:id="@+id/Text3"
               android:layout_marginTop="15dp"
               android:layout_below="@+id/Medal2"
               android:layout_width="300dp"
               android:layout_height="90dp"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@id/Medal4"
               android:src= "@drawable/De10"
               />
           <ImageView
               android:id="@+id/Medal4"
               android:layout_width="50dp"
               android:layout_height="86dp"
               android:layout_gravity="center"
               android:layout_below="@+id/Medal3"
               android:src= "@drawable/quality"/>
           <ImageView
               android:id="@+id/Text5"
               android:layout_marginTop="15dp"
               android:layout_below="@+id/Medal3"
               android:layout_width="300dp"
               android:layout_height="90dp"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@id/Medal5"
               android:src= "@drawable/De4"
               />

           <ImageView
               android:id="@+id/Medal5"
               android:layout_width="50dp"
               android:layout_height="86dp"
               android:layout_gravity="center"
               android:layout_below="@+id/Medal4"
               android:src= "@drawable/quality"/>

           <ImageView
               android:id="@+id/Text"
               android:layout_marginTop="15dp"
               android:layout_below="@+id/Medal4"
               android:layout_width="300dp"
               android:layout_height="90dp"
               android:layout_marginStart="20dp"
               android:layout_toEndOf="@id/Medal3"
               android:src= "@drawable/De0"
               />
       </RelativeLayout>
    </LinearLayout>

      
</androidx.constraintlayout.widget.ConstraintLayout>