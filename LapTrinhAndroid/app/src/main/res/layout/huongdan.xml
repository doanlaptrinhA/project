<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/next"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/next1" />

        <ImageView
            android:id="@+id/Tutorial"
            android:layout_width="250dp"
            android:layout_height="76dp"
            android:layout_marginStart="70dp"
            android:layout_toEndOf="@id/next"
            android:padding="5dp"
            android:src="@drawable/hdsd" />

        <ImageView
            android:id="@+id/Dautien"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:src="@drawable/dautien" />

        <ImageView
            android:id="@+id/Img2"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/Dautien"
            android:layout_marginTop="-71dp"
            android:src="@drawable/img1" />

        <ImageView
            android:id="@+id/Img3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_below="@+id/Img2"
            android:layout_marginTop="-99dp"
            android:src="@drawable/Gach" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="9dp">

            <ImageView
                android:id="@+id/Img"
                android:layout_width="80dp"
                android:layout_height="76dp"
                android:layout_marginStart="50dp"
                android:layout_toEndOf="@id/next"
                android:src="@drawable/hd1" />
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>